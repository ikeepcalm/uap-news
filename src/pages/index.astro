---
import Layout from '../layouts/Layout.astro';
import {getCollection} from 'astro:content';

const posts = await getCollection('news');
const sortedPosts = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const formatDate = (date: Date) => {
    return new Date(date).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
    });
};
---

<Layout title="Новини | UAProject" description="Останні новини та оновлення сервера UAProject">
    <main class="container">
        <header class="page-header">
            <h1>Єдиний портал</h1>
            <p>Будьте в курсі останніх змін, подій та анонсів</p>
        </header>

        <div class="posts-grid">
            {sortedPosts.map((post) => (
                    <article class="post-card">
                        <div class="post-content">
                            <time class="post-date">{formatDate(post.data.date)}</time>
                            <h2>
                                <a href={`/${post.slug}`}>{post.data.title}</a>
                            </h2>
                            {post.data.description && (
                                    <p class="post-description">{post.data.description}</p>
                            )}
                            <div class="post-meta">
                                <span class="author">By {post.data.author}</span>
                                {post.data.tags && (
                                        <div class="tags">
                                            {post.data.tags.map((tag) => (
                                                    <span class="tag">{tag}</span>
                                            ))}
                                        </div>
                                )}
                            </div>
                        </div>
                    </article>
                ))}
                </div>
                </main>
                </Layout>

                <style>
                    .container {
                        max-width: 1200px;
                        margin: 0 auto;
                        padding: 2rem;
                    }

                    .page-header {
                        text-align: center;
                        margin-bottom: 4rem;
                    }

                    .page-header h1 {
                        font-size: 3rem;
                        font-weight: 800;
                        color: #1a1a1a;
                        margin-bottom: 1rem;
                    }

                    .page-header p {
                        font-size: 1.2rem;
                        color: #6b7280;
                        max-width: 600px;
                        margin: 0 auto;
                    }

                    .posts-grid {
                        display: grid;
                        gap: 2rem;
                        max-width: 800px;
                        margin: 0 auto;
                    }

                    .post-card {
                        background: #ffffff;
                        border: 1px solid #e5e7eb;
                        border-radius: 12px;
                        padding: 2rem;
                        transition: all 0.2s ease;
                        box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
                    }

                    .post-card:hover {
                        transform: translateY(-2px);
                        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
                        border-color: #3b82f6;
                    }

                    .post-date {
                        color: #6b7280;
                        font-size: 0.9rem;
                        font-weight: 500;
                        text-transform: uppercase;
                        letter-spacing: 0.05em;
                    }

                    .post-card h2 {
                        margin: 0.5rem 0 1rem 0;
                        font-size: 1.5rem;
                        font-weight: 700;
                    }

                    .post-card h2 a {
                        color: #1a1a1a;
                        text-decoration: none;
                        transition: color 0.2s ease;
                    }

                    .post-card h2 a:hover {
                        color: #3b82f6;
                    }

                    .post-description {
                        color: #4b5563;
                        line-height: 1.6;
                        margin-bottom: 1.5rem;
                    }

                    .post-meta {
                        display: flex;
                        justify-content: space-between;
                        align-items: center;
                        flex-wrap: wrap;
                        gap: 1rem;
                    }

                    .author {
                        color: #6b7280;
                        font-size: 0.9rem;
                        font-weight: 500;
                    }

                    .tags {
                        display: flex;
                        gap: 0.5rem;
                        flex-wrap: wrap;
                    }

                    .tag {
                        background: #eff6ff;
                        color: #1d4ed8;
                        font-size: 0.8rem;
                        font-weight: 500;
                        padding: 0.25rem 0.75rem;
                        border-radius: 9999px;
                    }

                    @media (max-width: 768px) {
                        .container {
                            padding: 1rem;
                        }

                        .page-header h1 {
                            font-size: 2.5rem;
                        }

                        .page-header p {
                            font-size: 1.1rem;
                        }

                        .post-card {
                            padding: 1.5rem;
                        }

                        .post-meta {
                            flex-direction: column;
                            align-items: flex-start;
                        }
                    }
                </style>